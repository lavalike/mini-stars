.header-picture {
  width: 100%;
  height: 230px;
  display: block;
}

.empty-container {
  width: 100%;
  height: 400px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.empty-container-icon {
  width: 100px;
  height: 100px;
}

.footer-txt {
  display: block;
  text-align: center;
  color: #3b424c;
  font-size: 14px;
  padding-bottom: 50px;
}

.btn-login {
  width: 55px;
  height: 55px;
  position: fixed;
  bottom: 30px;
  right: 15px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 2px;
}

.icon-login {
  width: 100%;
  height: 100%;
}

.btn-publish {
  width: 55px;
  height: 55px;
  background: #f18c1a;
  position: fixed;
  border-radius: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow:#f18c1a 0px 0px 10px;
  bottom: 30px;
  right: 15px;
}

.icon-publish {
  width: 25px;
  height: 25px;
}