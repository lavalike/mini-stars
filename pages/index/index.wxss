.header-picture {
  width: 100%;
  height: 230px;
  display: block;
}

.empty-container {
  width: 100%;
  height: 400px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.empty-container-icon {
  width: 100px;
  height: 100px;
}

.footer-txt {
  display: block;
  text-align: center;
  color: #3b424c;
  font-size: 14px;
  padding-bottom: 50px;
}

.btn-login {
  width: 55px;
  height: 55px;
  position: fixed;
  bottom: 30px;
  right: 15px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 2px;
}

.icon-login {
  width: 100%;
  height: 100%;
}

.btn-publish {
  width: 55px;
  height: 55px;
  background: #f18c1a;
  position: fixed;
  border-radius: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow:#f18c1a 0px 0px 10px;
  bottom: 30px;
  right: 15px;
}

.icon-publish {
  width: 25px;
  height: 25px;
}

.diary-item-container {
  margin: 10px;
  padding: 10px;
  border-radius: 5px;
  border-color: #a0a4a9;
  border-style: dashed;
  border-width: 1px;
}

.diary-user-container {
  display: flex;
  align-items: center;
}

.diary-item-avatar {
  width: 30px;
  height: 30px;
  border-radius: 30px;
}

.diary-user-info-container {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.diary-item-nickname {
  font-size: 16px;
  color: #a0a4a9;
  font-weight: bold;
}

.diary-item-update-time {
  font-size: 12px;
  color: #a0a4a9;
}

.diary-item-content {
  margin-top: 10px;
  display: block;
  color: #3b424c;
  font-size: 16px;
}